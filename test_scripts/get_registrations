#!/bin/bash

# Default values
host=http://localhost
port=8080

while getopts zpe:s:x: flag; do
  case "${flag}" in
  z) host=${OPTARG} ;;
  p) port=${OPTARG} ;;
  e) email=${OPTARG} ;;
  s) slug=${OPTARG} ;;
  x) secret=${OPTARG} ;;
  *) echo "Invalid flag." ;;
  esac
done

if [ -z ${secret+x} ]; then
  echo "No authorization header specified (use -x)."
  exit 1
fi


if [ -z ${email+x} ] && [ -z ${slug+x} ]; then
  curl --verbose \
    -H "Authorization: $secret" \
    "$host":"$port"/registration
elif [ -z ${slug+x} ]; then
  curl --verbose \
    -H "Authorization: $secret" \
    "$host":"$port"/registration?email="$email"
elif [ -z ${email+x} ]; then
  curl --verbose \
    -H "Authorization: $secret" \
    "$host:$port/registration?slug=$slug"
else
  curl --verbose \
    -H "Authorization: $secret" \
    "$host:$port/registration?email=$email&slug=$slug"
fi
