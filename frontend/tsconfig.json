{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@components/*": ["./components/*"],
            "@styles/*": ["./styles/*"],
            "@api/*": ["./lib/api/*"],
            "@hooks/*": ["./lib/hooks/*"],
            "@utils/*": ["./lib/utils/*"],
            "@static/*": ["../public/static/*"],
            "@pages/*": ["./pages/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "src/components/__tests__/testing-utils.js",
        "jest.setup.js",
        "next.config.js",
        "**/*.ts",
        "**/*.tsx",
        ".lintstagedrc.js"
    ],
    "exclude": ["node_modules"]
}
