{
    "name": "echo-web-frontend",
    "description": "Frontend til nettsiden til echo â€“ Linjeforeningen for informatikk.",
    "private": true,
    "version": "1.0.0",
    "author": "echo Webkom",
    "homepage": "https://github.com/echo-webkom/echo-web-frontend",
    "scripts": {
        "build": "next build",
        "dev": "next dev",
        "start": "next start",
        "lint": "next lint",
        "test": "jest"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaFeatures": {
                "jsx": true
            },
            "ecmaVersion": 2018,
            "sourceType": "module",
            "project": "./tsconfig.json"
        },
        "extends": [
            "prettier",
            "plugin:unicorn/recommended",
            "plugin:@typescript-eslint/recommended-requiring-type-checking",
            "plugin:prettier/recommended",
            "plugin:import/recommended",
            "plugin:import/typescript",
            "next/core-web-vitals"
        ],
        "env": {
            "browser": true,
            "es6": true
        },
        "globals": {
            "Atomics": "readonly",
            "SharedArrayBuffer": "readonly"
        },
        "ignorePatterns": [
            "node_modules/",
            "public/",
            ".next/",
            "next.config.js"
        ],
        "rules": {
            "no-console": "error",
            "linebreak-style": "off",
            "camelcase": "error",
            "eqeqeq": "error",
            "no-trailing-spaces": "error",
            "eol-last": "error",
            "react/jsx-props-no-spreading": "off",
            "react/jsx-curly-brace-presence": [
                "error",
                {
                    "props": "never"
                }
            ],
            "import/no-useless-path-segments": "error",
            "import/order": "error",
            "import/exports-last": "error",
            "import/group-exports": "error",
            "import/prefer-default-export": "error",
            "@typescript-eslint/array-type": [
                "error",
                {
                    "default": "generic"
                }
            ],
            "@typescript-eslint/no-unnecessary-boolean-literal-compare": "error",
            "@typescript-eslint/no-unnecessary-condition": "error",
            "@typescript-eslint/no-throw-literal": "error",
            "@typescript-eslint/no-unused-vars": "error",
            "@typescript-eslint/no-unsafe-argument": "off",
            "@typescript-eslint/no-unsafe-assignment": "off",
            "@typescript-eslint/no-unsafe-member-access": "off",
            "@typescript-eslint/prefer-optional-chain": "error",
            "@typescript-eslint/prefer-nullish-coalescing": "error",
            "unicorn/no-null": "off",
            "unicorn/no-abusive-eslint-disable": "off",
            "unicorn/prevent-abbreviations": "off",
            "unicorn/prefer-node-protocol": "off",
            "unicorn/no-new-array": "off",
            "unicorn/numeric-separators-style": "off"
        }
    },
    "prettier": {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 4
    },
    "jest": {
        "setupFilesAfterEnv": [
            "<rootDir>/jest.setup.js"
        ],
        "testEnvironment": "jsdom",
        "testPathIgnorePatterns": [
            "<rootDir>/.next/",
            "<rootDir>/node_modules/",
            "<rootDir>/cypress/",
            "testing-utils.ts",
            "testing-wrapper.tsx"
        ]
    },
    "babel": {
        "presets": [
            "next/babel"
        ]
    },
    "dependencies": {
        "@chakra-ui/react": "2.1.2",
        "@emotion/react": "11.9.0",
        "@emotion/styled": "11.8.1",
        "@sanity/client": "3.3.0",
        "axios": "0.27.2",
        "calendar-link": "2.2.0",
        "date-fns": "2.28.0",
        "framer-motion": "6.3.3",
        "markdown-to-jsx": "7.1.7",
        "next": "12.1.6",
        "next-auth": "4.3.4",
        "next-pwa": "5.5.2",
        "nextjs-progressbar": "0.0.14",
        "react": "18.1.0",
        "react-dom": "18.1.0",
        "react-hook-form": "7.31.2",
        "react-icons": "4.3.1",
        "react-snowfall": "1.1.2",
        "remove-markdown": "0.5.0",
        "typescript-json-decoder": "1.0.7"
    },
    "devDependencies": {
        "@testing-library/dom": "8.13.0",
        "@testing-library/jest-dom": "5.16.4",
        "@testing-library/react": "13.2.0",
        "@testing-library/user-event": "14.2.0",
        "@types/node": "14.18.18",
        "@types/react": "18.0.9",
        "@types/react-dom": "18.0.5",
        "@types/remove-markdown": "0.3.1",
        "@typescript-eslint/eslint-plugin": "5.26.0",
        "@typescript-eslint/parser": "5.26.0",
        "cypress": "9.7.0",
        "eslint": "8.16.0",
        "eslint-config-next": "12.1.6",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-prettier": "4.0.0",
        "eslint-plugin-unicorn": "42.0.0",
        "jest": "28.1.0",
        "jest-environment-jsdom": "28.1.0",
        "typescript": "4.6.4"
    }
}
