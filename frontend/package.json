{
    "name": "echo-web-frontend",
    "description": "Frontend til nettsiden til echo â€“ Linjeforeningen for informatikk.",
    "private": true,
    "version": "1.0.0",
    "author": "echo Webkom",
    "homepage": "https://github.com/echo-webkom/echo-web-frontend",
    "scripts": {
        "build": "next build",
        "dev": "next dev",
        "start": "next start",
        "lint": "next lint",
        "test": "cypress run --component --config video=false,screenshotOnRunFailure=false"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaFeatures": {
                "jsx": true
            },
            "ecmaVersion": 2018,
            "sourceType": "module",
            "project": "./tsconfig.json"
        },
        "extends": [
            "prettier",
            "plugin:unicorn/recommended",
            "plugin:@typescript-eslint/recommended-requiring-type-checking",
            "plugin:prettier/recommended",
            "plugin:import/recommended",
            "plugin:import/typescript",
            "next/core-web-vitals"
        ],
        "env": {
            "browser": true,
            "es6": true
        },
        "globals": {
            "Atomics": "readonly",
            "SharedArrayBuffer": "readonly"
        },
        "ignorePatterns": [
            "node_modules/",
            "public/",
            ".next/",
            "next.config.js"
        ],
        "rules": {
            "no-console": "error",
            "linebreak-style": "off",
            "camelcase": "error",
            "eqeqeq": "error",
            "no-trailing-spaces": "error",
            "eol-last": "error",
            "react/jsx-props-no-spreading": "off",
            "react/jsx-curly-brace-presence": [
                "error",
                {
                    "props": "never"
                }
            ],
            "import/no-useless-path-segments": "error",
            "import/order": "error",
            "import/exports-last": "error",
            "import/group-exports": "error",
            "import/prefer-default-export": "error",
            "@typescript-eslint/array-type": [
                "error",
                {
                    "default": "generic"
                }
            ],
            "@typescript-eslint/no-unnecessary-boolean-literal-compare": "error",
            "@typescript-eslint/no-unnecessary-condition": "error",
            "@typescript-eslint/no-throw-literal": "error",
            "@typescript-eslint/no-unused-vars": "error",
            "@typescript-eslint/no-unsafe-argument": "off",
            "@typescript-eslint/no-unsafe-assignment": "off",
            "@typescript-eslint/no-unsafe-member-access": "off",
            "@typescript-eslint/prefer-optional-chain": "error",
            "@typescript-eslint/prefer-nullish-coalescing": "error",
            "@typescript-eslint/consistent-type-definitions": "error",
            "@typescript-eslint/consistent-type-imports": [
                "error",
                {
                    "prefer": "type-imports"
                }
            ],
            "@typescript-eslint/consistent-type-exports": [
                "error",
                {
                    "fixMixedExportsWithInlineTypeSpecifier": true
                }
            ],
            "unicorn/no-null": "off",
            "unicorn/no-abusive-eslint-disable": "off",
            "unicorn/prevent-abbreviations": "off",
            "unicorn/prefer-node-protocol": "off",
            "unicorn/no-new-array": "off",
            "unicorn/numeric-separators-style": "off"
        }
    },
    "prettier": {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 4
    },
    "dependencies": {
        "@chakra-ui/react": "2.3.6",
        "@emotion/react": "11.10.4",
        "@emotion/styled": "11.10.4",
        "@sanity/client": "3.4.1",
        "@sanity/image-url": "1.0.1",
        "axios": "0.27.2",
        "calendar-link": "2.2.0",
        "canvas-confetti": "1.6.0",
        "date-fns": "2.29.3",
        "framer-motion": "7.6.1",
        "markdown-to-jsx": "7.1.7",
        "next": "12.3.1",
        "next-auth": "4.15.0",
        "next-pwa": "5.6.0",
        "nextjs-progressbar": "0.0.16",
        "randomcolor": "0.6.2",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-hook-form": "7.38.0",
        "react-icons": "4.6.0",
        "react-snowfall": "1.2.1",
        "recharts": "2.1.15",
        "remove-markdown": "0.5.0",
        "typescript-json-decoder": "1.0.10"
    },
    "devDependencies": {
        "@types/canvas-confetti": "1.4.3",
        "@types/node": "16.18.2",
        "@types/randomcolor": "0.5.6",
        "@types/react": "18.0.23",
        "@types/react-dom": "18.0.7",
        "@types/remove-markdown": "0.3.1",
        "@typescript-eslint/eslint-plugin": "5.41.0",
        "@typescript-eslint/parser": "5.41.0",
        "cypress": "10.11.0",
        "eslint-config-next": "12.3.1",
        "eslint-plugin-unicorn": "44.0.2",
        "typescript": "4.8.4"
    }
}
