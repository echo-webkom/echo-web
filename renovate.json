{
  "extends": [
    "config:base"
  ],
  "labels": [
    "dependencies :handshake:"
  ],
  "prHourlyLimit": 0,
  "stabilityDays": 3,
  "prCreation": "not-pending",
  "ignoreDeps": ["openjdk"],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^org.jetbrains.exposed"
      ],
      "groupName": "Exposed packages"
    },
    {
      "matchPackagePatterns": [
        "^io.ktor"
      ],
      "groupName": "Ktor packages"
    },
    {
      "matchPackagePatterns": [
        "^io.kotest"
      ],
      "groupName": "Kotest packages"
    }
  ]
}
