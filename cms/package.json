{
    "name": "echo-web-cms",
    "description": "CMS for echo â€“ Linjeforeningen for informatikk sin nettside.",
    "private": true,
    "version": "1.0.0",
    "author": "echo Webkom",
    "scripts": {
        "dev": "sanity dev",
        "start": "sanity start",
        "build": "sanity build",
        "lint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
        "format": "prettier --write \"**/*.{js,jsx,json,md}\" && prettier --write --tab-width=2 \"**/*.{yaml,yml}\""
    },
    "eslintConfig": {
        "parserOptions": {
            "sourceType": "module",
            "ecmaVersion": "2020"
        },
        "extends": [
            "eslint:recommended",
            "plugin:prettier/recommended",
            "@sanity/eslint-config-studio"
        ],
        "ignorePatterns": [
            "node_modules/",
            "dist/",
            "scripts/"
        ]
    },
    "prettier": {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 4
    },
    "dependencies": {
        "@sanity/color-input": "3.0.1",
        "@sanity/vision": "3.1.2",
        "prop-types": "15.8.1",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-icons": "4.7.1",
        "react-is": "18.2.0",
        "sanity": "3.1.2",
        "sanity-plugin-color-picker": "1.0.3",
        "sanity-plugin-markdown": "3.0.1",
        "sanity-plugin-media": "2.0.2",
        "slugify": "1.6.5",
        "styled-components": "5.3.6"
    },
    "devDependencies": {
        "@sanity/cli": "3.1.2",
        "@sanity/eslint-config-studio": "2.0.1",
        "typescript": "4.9.4"
    }
}
