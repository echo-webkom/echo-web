{
    "name": "echo-web-cms",
    "description": "CMS for echo â€“ Linjeforeningen for informatikk sin nettside.",
    "private": true,
    "version": "1.0.0",
    "author": "echo Webkom",
    "scripts": {
        "dev": "sanity dev",
        "start": "sanity start",
        "build": "sanity build",
        "lint": "eslint \"**/*.{ts,tsx,js,jsx}\"",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" && prettier --write --tab-width=2 \"**/*.{yaml,yml}\"",
        "pcheck": "prettier -c \"**/*.{ts,tsx,js,jsx,json,md}\" && prettier -c --tab-width=2 \"**/*.{yaml,yml}\""
    },
    "eslintConfig": {
        "parserOptions": {
            "sourceType": "module",
            "ecmaVersion": "2020"
        },
        "extends": [
            "eslint:recommended",
            "plugin:prettier/recommended",
            "@sanity/eslint-config-studio"
        ],
        "ignorePatterns": [
            "node_modules/",
            "dist/",
            "scripts/"
        ]
    },
    "prettier": {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 4
    },
    "dependencies": {
        "@sanity/color-input": "3.0.2",
        "@sanity/icons": "2.2.2",
        "@sanity/vision": "3.2.6",
        "easymde": "2.18.0",
        "prop-types": "15.8.1",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-is": "18.2.0",
        "sanity": "3.2.6",
        "sanity-plugin-color-picker": "1.0.3",
        "sanity-plugin-markdown": "4.0.0",
        "sanity-plugin-media": "2.0.5",
        "slugify": "1.6.5",
        "styled-components": "5.3.6"
    },
    "devDependencies": {
        "@sanity/cli": "3.2.6",
        "@sanity/eslint-config-studio": "2.0.1",
        "eslint": "8.33.0",
        "eslint-config-prettier": "8.6.0",
        "eslint-plugin-prettier": "4.2.1",
        "prettier": "2.8.3",
        "typescript": "4.9.5"
    }
}
